@page
@model BookListRazor.Pages.BookList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class=" text-info col-9">
        <h2>Book list</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control"> Create New book</a>
    </div>

    <div class="col-12 border p-5 mt-4">
        <form method="post">
            @if (Model.books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="books.FirstOrDefault().ISBN"></label>
                        </th>
                    </tr>
                    @foreach (var item in Model.books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ISBN)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you wanna delete?' )" class="btn btn-danger">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Books Available to display:(:(:(</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th> Author</th>
                    <th> ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{ 
    <script src ="~/js/BookList.js"></script>
}